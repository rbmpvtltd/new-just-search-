{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "types/*": ["../../packages/types/src/*"]
    },
    "composite": true,
    "incremental": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
